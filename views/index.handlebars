<h1>Eat Dat Burger!</h1>

<h2>Burgers Ready-to-Eat!</h2>
<ul>
    {{#each burgers}}
        {{#unless devoured}}

        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers Eaten</h2>
<ul>
    {{#each burgers}}
        {{#if devoured}}

        {{/if}}
    {{/each}}
</ul>

<form class="create-form">
    <div class="form-group">
        <label for="ca">What Burger would you like?</label>
        <input type="text" id="ca" name="name">
    </div>
    <button type="submit">Make Burger</button>
</form>